<?xml version="1.0" encoding="UTF-8"?>
<!--设置log4j2的自身log级别为INFO -->
<Configuration status="info">
    <Appenders>
        <!-- Appenders 控制台日志 -->
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} [%L] - %msg%n" />
        </Console>

        <!-- info信息日志 -->
        <RollingFile name="infoLog" fileName="@log4j2.back.file@/info.log"
                     filePattern="@log4j2.back.file@/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="INFO" />
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL" />
            </Filters>
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.sss} [%-5p] %c [%L] - %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
        </RollingFile>

        <!-- warn信息日志 -->
        <RollingFile name="warnLog" fileName="@log4j2.back.file@/warn.log"
                     filePattern="@log4j2.back.file@/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="WARN" />
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL" />
            </Filters>
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.sss} [%-5p] %c [%L] - %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
        </RollingFile>

        <!-- error信息日志 -->
        <RollingFile name="errorLog" fileName="@log4j2.back.file@/error.log"
                     filePattern="@log4j2.back.file@/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log">
            <ThresholdFilter level="ERROR" />
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.sss} [%-5p] [%L] %c - %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
        </RollingFile>
    </Appenders>

    <!-- Application Loggers -->
    <Loggers>
        <Root level="@log4j2.log.level@">
            @log4j2.log.console@
            <AppenderRef ref="infoLog"/>
            <AppenderRef ref="warnLog"/>
            <AppenderRef ref="errorLog"/>
        </Root>
    </Loggers>
</Configuration>
